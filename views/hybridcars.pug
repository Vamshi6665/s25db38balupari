extends layout

block content
  h1= title
  - let items = results
  p Below are some hybrid cars in the collection:

  // ðŸ”¹ Create New Hybrid Car Button
  a.btn.btn-success.mb-3(href="/hybridcars/create") + Add New Hybrid Car

  .container-fluid
    .row
      each car in items
        .col-sm-3.border.p-2
          h3 Name: #{car.name}
          p Mileage: #{car.mileage_mpg} mpg
          p Type: #{car.type}

          // ðŸ”¸ Update Button
          button.btn.btn-primary.mt-2(
            onclick=`dispatch('/hybridcars/update?id=${car._id}')`
          ) Update

          // ðŸ”¸ Detail Button
          button.btn.btn-info.mt-2.ms-2(
            onclick=`dispatch('/hybridcars/detail?id=${car._id}')`
          ) Detail View

          // ðŸ”¸ Delete Button
          button.btn.btn-danger.mt-2.ms-2(
            onclick=`dispatch('/hybridcars/delete?id=${car._id}')`
          ) Delete

  script.
    function dispatch(path) {
      window.location.href = path;
    }

  p
    a(href="/") Back to Home
